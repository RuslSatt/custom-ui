{
	"compilerOptions": {
		"outDir": "./build/",
		"noImplicitAny": true,
		"module": "ESNext",
		"target": "es5",
		"jsx": "react",
		"allowJs": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"paths": {
			"*": ["./src/*"]
		},
		"declaration": true
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	},
	"include": ["./config/jest/setupTests.ts", "src"]
}
